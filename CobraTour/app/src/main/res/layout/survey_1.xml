<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/survey_1"
    android:padding="0dp">  <!-- Ensure no padding -->

    <Button
        android:id="@+id/student_button"
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:background="@drawable/student_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/employee_button"
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/employee_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/student_button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/student_button"
        app:layout_constraintTop_toBottomOf="@+id/student_button"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/visitor_button"
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/visitor_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/employee_button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/employee_button"
        app:layout_constraintTop_toBottomOf="@+id/employee_button"
        app:layout_constraintVertical_bias="0.0" />

    <ProgressBar
        android:id="@+id/page_1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="106dp"
        android:layout_height="24dp"
        android:background="@color/app_gray"
        android:max="100"
        android:progress="50"
        android:progressTint="@color/red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/visitor_button"
        app:layout_constraintStart_toStartOf="@+id/visitor_button"
        app:layout_constraintTop_toBottomOf="@+id/visitor_button"
        app:layout_constraintVertical_bias="0.058" />
</androidx.constraintlayout.widget.ConstraintLayout>
